<div id="main-container" class="container">
<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @album.text %>
</p>
<p>
  <strong>Image:</strong>
  <%= link_to image_tag(@album.image.url(:large)), @album.image.url %>
</p>
<h4>Leave a Comment:</h4>
<%= render 'comments/form' %>
<br><br>

<p><span class="badge"><%=@album.comments.count %></span> Comments:</p><br>
<%= render @album.comments %>
<% if current_user.id == @album.user_id %>
  <%= link_to 'Edit', edit_album_path(@album) %> |
<% end %>

</div>
