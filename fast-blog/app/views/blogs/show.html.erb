<div class="container col-12 col-sm-12 col-lg-12">
  <div class="media index-page">
    <div class="media-left">
      <%= image_tag('https://cdn1.iconfinder.com/data/icons/ninja-things-1/720/ninja-background-128.png' , :style => "max-width:60px;max-height:60px", :class => "media-object") %><br>
    </div>
    <div class="media-body">
      <h4 class="media-heading">Ten nguoi viet</h4>
      <p><%= @blog.created_at.to_s  %></p>
      <% if @blog.image_file_name != nil %>
      <center>
        <%= image_tag(@blog.image.url(:thumb) ,  class:'img-media') %><br>
      </center>
      <%end%>
      <p class = "content" style="text-align:justify;"><%= @blog.content %></p>

      <br>
      <div>
        <% if user_signed_in? && current_user.id == @blog.user_id %>
            <%= link_to 'Edit blog',edit_blog_path(@blog) , class: 'btn btn-primary' %>
            <%= link_to 'Delete blog',blog_path(@blog),class: 'btn btn-danger',
                        method: :delete,
                        data: {confirm: 'Are you want to delete this blog?'} %>
        <%end%>
        <%= link_to 'Views: '+ @blog.view_counts.to_s(),'javascript:;',class: 'btn btn-success pull-right'%>
      </div>

    </div>
    <div class="media-right">
    </div>
  </div>
  <hr>
  <div>
    <% @blog.comments.each do |comment| %>
        <div class="media comment-page">
          <div class="media-left">
            <span><%= image_tag 'https://cdn1.iconfinder.com/data/icons/ninja-things-1/720/ninja-background-128.png', style: 'width: 30px; height: 30px' %></span>
          </div>
          <div class="media-body">
            <strong>Nguoi coment </strong>
            <span style="text-align:justify"><%= comment.content %></span>
          </div>
          <div class="media-right">
            <% if current_user.id == comment.user_id %>
                <%= link_to image_tag('https://cdn0.iconfinder.com/data/icons/very-basic-android-l-lollipop-icon-pack/24/close-32.png'), [comment.blog, comment],
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
            <%end%>
          </div>
        </div>
    <% end %>
    <!--Add comment-->

    <%= form_for([@blog, @blog.comments.build])  do |f| %>

        <div class="form-group">
          <% f.label :content %><strong>Comment:</strong> <br>
          <%= f.text_area :content, :class => "form-control", rows: '1' %>
        </div>
        <div class="form-group">
          <%= f.submit %>
        </div>

    <% end %>
  </div>
</div>


