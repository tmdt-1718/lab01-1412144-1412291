
<div class="container">
  <div class = "col-sm-offset-2 col-sm-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class = "col-sm-offset-3 col-sm-12">
        <%= image_tag(current_user.avatar.url , :id => "output", :style => "max-width:200px;max-height:200px", class: 'img-circle') %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :avatar, :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.file_field :avatar, accept: 'image/*', :onchange => "loadFile(event)" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name, :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.text_field :name, :class => "form-control " ,autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.email_field :email, :class => "form-control " %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password,  :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.password_field :password, :class => "form-control ", autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.password_field :password_confirmation, :class => "form-control ",autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">

          <%= f.label :current_password, :class => "control-label col-sm-2" %>
          <div class="col-sm-5">
            <%= f.password_field :current_password, :class => "form-control ",autocomplete: "off" %>
            <em>(we need your current password to confirm your changes)</em>
          </div>
        </div>


        <center class="actions col-sm-9">
          <%= f.submit "Update", :class => "btn btn-info" %>
        </center>

        <center class="actions col-sm-9" style="margin-top: 12px" >
          <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
        </center>

    <% end %>
  </div>
</div>

