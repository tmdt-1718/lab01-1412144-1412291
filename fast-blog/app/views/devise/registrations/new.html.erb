<div class="container">

  <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>

      </div>

      <div style="padding-top:30px" class="panel-body" >
        <!--<form id="signupform" class="form-horizontal" role="form">-->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
            <div id="signupalert" style="display:none" class="alert alert-danger">
              <p><%= devise_error_messages! %></p>
              <span></span>
            </div>
            <center>
              <%= image_tag('https://cdn1.iconfinder.com/data/icons/ninja-things-1/720/ninja-background-256.png', :id => "output", :style => "width:200px;height:200px", class: "img-circle") %>
            </center>

            <br>
            <div class="form-group">
              <%= f.label :avatar,  class: "col-md-4 control-label"%>
              <div class="col-md-7">
                <%= f.file_field :avatar, accept: 'image/*', :onchange => "loadFile(event)" %>
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="col-md-4 control-label">Email</label>
              <div class="col-md-7">
                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label for="firstname" class="col-md-4 control-label">Full Name</label>
              <div class="col-md-7">
                <%= f.text_field :name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label for="lastname" class="col-md-4 control-label">Password</label>
              <div class="col-md-7">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <label for="password" class="col-md-4 control-label">Password Retype</label>
              <div class="col-md-7">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
              </div>
            </div>



            <div class="form-group">
              <!-- Button -->
              <div class="col-md-offset-5 col-md-9">
                <!--<button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>-->
                <%= f.submit "Sign up", :class => "btn btn-info" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
