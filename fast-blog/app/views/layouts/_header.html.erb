<div class="navbar navbar-fixed-top navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><strong>FAST BLOG</strong></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= home_page_active? ? 'active' : 'home' %>"><%= link_to('Home', home_path) %></li>
        <li class="<%= albums_page_active? ? 'active' : 'albums' %>"><%= link_to('Albums', albums_path) %></li>
        <li class="<%= about_page_active? ? 'active' : 'about' %>"><%= link_to('About', about_path) %></li>
        <li class="<%= blogs_page_active? ? 'active' : 'blogs' %>"><%= link_to('Blogs', blogs_path) %></li>


      </ul>
      <div class="navbar-form navbar-left">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search Blog..">
          <span class="input-group-btn">
              <button class="btn btn-default" type="button">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
        </div>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <ul class="nav nav-pills nav-stacked">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span>
                   <% if current_user.avatar_fb? %>
                        <%= image_tag current_user.avatar_fb, class: "img-circle" %>
                    <% else %>
                        <%= image_tag current_user.avatar.url, class: "img-circle", width:"30", height:"30" %>
                            <!-- <li><%= link_to image_tag(current_user.avatar.url(:small)), current_user.avatar.url, class: "img-circle" %></li> -->
                    <% end %>
                </span>
                <%= current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", edit_user_registration_path%></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
              </ul>
            </li>
          </ul>


        <% else %>
            <li><%= link_to "Sign in",new_user_session_path%></li>
        <% end %>
      </ul>
    </div>
